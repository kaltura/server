<script type="text/javascript">

jQuery("#unselect").on("click", function () {
    var selectedItem = $("#selectedValues option:selected");
    $("#possibleValues").append(selectedItem);
});

jQuery("#select").on("click",function () {
    var selectedItem = $("#possibleValues option:selected");
    $("#selectedValues").append(selectedItem);
});

jQuery("#up").on("click",function () {
    var selectedItem = $("#selectedValues option:selected");
    if(selectedItem.length)
        selectedItem.first().prev().before(selectedItem);
});

jQuery("#down").on("click",function () {
    var selectedItem = $("#selectedValues option:selected");
    if(selectedItem.length)
        selectedItem.first().next().after(selectedItem);
});

</script>

