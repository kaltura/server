<script type="text/javascript">
jQuery('#filter_type').change(function() {
	if(this.value == "none") {
		$("#filter_text").css("display","none");
		$("div.help").hide();
	}
	else {
		$("#filter_text").css("display","inline");
		$("#filter_text input").focus();
		if(this.value == "free")
			$("div.help").show();
		else
			$("div.help").hide();
	}
});

jQuery('#filter_type').change();

function doAction(action, id) {
	if (action && eval('typeof ' + action) == 'function')
	{
		f = eval(action);
		Array.prototype.shift.apply(arguments);
		f.apply(this, arguments);
	}
	jQuery('select.options').val('');
}

function editForm(id) {
	var url = '<?php echo $this->url(array('controller' => 'widget', 'action' => 'edit'), null, true); ?>' + '/id/' + id;
	
	jQuery('#widget-dialog').remove();
	dialogDiv = jQuery('<div id="widget-dialog"><?php echo $this->translate('Loading...'); ?></div>').appendTo('body');
	
	dialogDiv.dialog({
		bgiframe: true,
		modal: true,
		resizable: false,
		width: 390,
		height: Math.min(jQuery(window).height() * 0.9, 970),
		title: '<?php echo $this->translate('Edit Widget'); ?>',
		buttons: {
			'<?php echo $this->translate('Save'); ?>': function() {
				jQuery(this).find('form').submit();
			},
				'<?php echo $this->translate('Close'); ?>': function() {
				jQuery(this).dialog('close');
			}
		}
	});	
	dialogDiv.load(
		url, 
		null, 
		function() {
			jQuery(this).find('form').ajaxForm(formSubmit); 
		}
	);
}

function newForm(partnerId) {
	var url = '<?php echo $this->url(array('controller' => 'widget', 'action' => 'create'), null, true); ?>' + '/partner_id/' + partnerId;
	
	jQuery('#widget-dialog').remove();
	dialogDiv = jQuery('<div id="widget-dialog"><?php echo $this->translate('Loading...'); ?></div>').appendTo('body');
	
	dialogDiv.dialog({
		bgiframe: true,
		modal: true,
		resizable: false,
		width: 390,
		height: Math.min(jQuery(window).height() * 0.9, 970),
		title: '<?php echo $this->translate('Add New Widget'); ?>',
		buttons: {
			'<?php echo $this->translate('Save'); ?>': function() {
				jQuery(this).find('form').submit();
			},
			'<?php echo $this->translate('Close'); ?>': function() {
				jQuery(this).dialog('close');
			}
		}
	});	
	dialogDiv.load(
		url, 
		null, 
		function() {
			jQuery(this).find('form').ajaxForm(formSubmit); 
		}
	);
}

function deleteWidget(id) {
	var ok = confirm('<?php echo $this->translate('are you sure delete widget?'); ?>');

	if (ok) {
		var url = '<?php echo $this->url(array('controller' => 'widget', 'action' => 'delete', 'id' => '')); ?>' + id;

		jQuery.ajax({
			url: url,
			dataType: 'json',
			success: function(result) {
				if (result != 'ok')
					return this.error();
				alert('<?php echo $this->translate('widget was deleted');?>');
				jQuery('#frmPaginator1').submit();
			},
			error: function() {
				alert('<?php echo $this->translate('widget was not deleted');?>');
			}
		});
	}
}

function duplicateWidget(id) {
	var url = '<?php echo $this->url(array('controller' => 'widget', 'action' => 'duplicate', 'id' => '')); ?>' + id;

	jQuery.ajax({
		url: url,
		dataType: 'json',
		success: function(result) {
			if (result != 'ok')
				return this.error();
			alert('<?php echo $this->translate('widget was duplicated');?>');
			jQuery('#frmPaginator1').submit();
		},
		error: function() {
			alert('<?php echo $this->translate('widget was not duplicated');?>');
		}
	});
}

function formSubmit(html) {
	if (jQuery(html).parent().find('form').hasClass('valid')) 
	{
		dialogDiv.dialog('close');
		jQuery('#frmPaginator1').submit();
	}
	else
	{
		jQuery('#widget-dialog').find('form').replaceWith(html);
		jQuery('#widget-dialog').find('form').ajaxForm(formSubmit);
	}
}

jQuery(function() {
	jQuery('#new_button').click(function() {
		var partnerId = '';
		if (jQuery('#filter_type').val() == 'by-partner-id') {
			partnerId = jQuery('#filter_input').val();
		}
		doAction('newForm', partnerId);
	});
});
