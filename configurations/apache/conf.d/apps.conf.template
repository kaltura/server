    </IfVersion>
</Directory>

Alias /html5 "@WEB_DIR@/html5"
<Directory "@WEB_DIR@/html5">
    ExpiresActive On
    DirectoryIndex index.php
    Options -Indexes +FollowSymLinks +Includes
    AllowOverride None
    Order allow,deny
    Allow from all
    <IfVersion >= 2.4>
	Require all granted
    </IfVersion>
</Directory>

