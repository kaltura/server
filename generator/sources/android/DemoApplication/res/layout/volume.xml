<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rl_palyer_rate"
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:background="@drawable/rate_background_selector"
	android:paddingLeft="10dp"
	android:paddingRight="10dp"
	android:paddingTop="5dp"
	android:paddingBottom="5dp"
	android:layout_margin="15dp"
	android:orientation="vertical"
	android:gravity="center">

    <com.tokaracamara.android.verticalslidevar.VerticalSeekBar
        android:id="@+id/vsb_volume"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        
        android:thumb="@drawable/thumb"
        android:progressDrawable="@drawable/seek_bar_progress_volume"/>
		        	

</LinearLayout>