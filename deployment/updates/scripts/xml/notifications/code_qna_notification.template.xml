<?xml version="1.0" encoding="UTF-8"?>
<xml>
	<config>
		<serviceUrl>@SERVICE_URL@</serviceUrl>
		<partnerId>-2</partnerId>
		<clientTag>Stand alone php 1.0.0</clientTag>
		<curlTimeout>30</curlTimeout>
		<userAgent>Stand alone php 1.0.0</userAgent>
	</config>
	<session>
        <partnerId>-2</partnerId>
        <secret>@ADMIN_CONSOLE_PARTNER_ADMIN_SECRET@</secret>
        <sessionType>2</sessionType>
    </session>
        <multirequest>
			<request service="responseProfile" action="listAction" partnerId="0">
				<filter objectType="KalturaResponseProfileFilter">
					<systemNameEqual>QandA</systemNameEqual>
				</filter>
			</request>
			<request service="eventNotificationTemplate" action="add" plugin="eventNotification" partnerId="0">
				<template objectType="KalturaPushNotificationTemplate">
					<name>CODE_QNA_NOTIFICATIONS</name>
					<systemName>CODE_QNA_NOTIFICATIONS</systemName>
					<description>Push notification template to be sent when a new code cue-point is created</description>
					<automaticDispatchEnabled>1</automaticDispatchEnabled>
					<eventType>5</eventType> <!-- EventNotificationEventType::OBJECT_CREATED -->
					<eventObjectType>cuePointEventNotifications.CuePoint</eventObjectType> 
					<eventConditions objectType="array">
						<item objectType="KalturaOrCondition">
							<conditions objectType="array">
								<item objectType="KalturaFieldMatchCondition">
									<description>Cue-point type equals</description>
									<field objectType="KalturaEvalStringField">
										<code>$scope->getObject()->getType()</code>
									</field>
									<values objectType="array">
										<item objectType="KalturaStringValue">
											<value>{trigger_cuepoint}</value>
										</item>
									</values>
								</item>
							</conditions>
						</item>
						<item objectType="KalturaFieldMatchCondition">
							<description>Tags_Like</description>
							<field objectType="KalturaEvalStringField">
								<code>$scope->getObject()->getTags() ? ( count(array_intersect(array("player-qna-settings-update","WEBCASTSTATETAG"), explode(",", $scope->getObject()->getTags()))) ? 1 : 0 ) : 0</code>
							</field>
							<values objectType="array">
								<item objectType="KalturaStringValue">
									<value>1</value>
								</item>
							</values>
						</item>
					</eventConditions>		
					<queueNameParameters objectType="array">
						<item objectType="KalturaPushEventNotificationParameter">
							<key>entryId</key>
							<description></description>
							<value objectType="KalturaEvalStringField">
								<code>$scope->getObject()->getEntryId()</code>
							</value>
						</item>
					</queueNameParameters>	
					<userParameters objectType="array">
						<item objectType="KalturaEventNotificationParameter">
							<key>trigger_cuepoint</key>
							<description>Cue-point type that triggers the event (Code type only), See:KalturaCuePointType:/api_v3/testmeDoc/enums/KalturaCuePointType.html</description>
							<value objectType="KalturaStringValue">
								<value></value>
							</value>
						</item>
					</userParameters>
					<apiObjectType>KalturaCodeCuePoint</apiObjectType>
					<objectFormat>1</objectFormat> <!-- KalturaResponseType::RESPONSE_TYPE_JSON -->
					<responseProfileId>{1:result:id}</responseProfileId>
				</template>
			</request>
			<request service="eventNotificationTemplate" action="updateStatus" plugin="eventNotification" partnerId="0">
				<id>{2:result:id}</id>
				<status>1</status><!-- EventNotificationTemplateStatus::DISABLED -->
			</request>
	</multirequest>
</xml>