<?xml version="1.0" encoding="UTF-8"?>
<xml>
    <config>
        <serviceUrl>http://{prompt:Host name:}/</serviceUrl>
        <partnerId>-2</partnerId>
        <clientTag>Stand alone php 1.0.0</clientTag>
        <curlTimeout>30</curlTimeout>
        <userAgent>Stand alone php 1.0.0</userAgent>
    </config>
    <session>
        <!-- script will ask for username / password interactively -->
    </session>
    <multirequest>
        <request service="eventNotificationTemplate" action="add" plugin="eventNotification" partnerId="0">
            <template objectType="KalturaEmailNotificationTemplate">
                <name>Is Live Entry Still Alive</name>
                <systemName>EMAIL_LIVE_ENTRY_NOT_ALIVE</systemName>
                <description>Email notification template to be sent when a 24/7 live entry stopped broadcasting.</description>
                <automaticDispatchEnabled>1</automaticDispatchEnabled>
                <eventType>3</eventType> <!-- EventNotificationEventType::OBJECT_CHANGED -->
                <eventObjectType>1</eventObjectType><!-- EventNotificationEventObjectType::ENTRY -->
                <eventConditions objectType="array">
                    <item objectType="KalturaEventFieldCondition">
                        <description>name field modified</description>
                        <field objectType="KalturaEvalBooleanField">
                            <code>$scope->getEvent()->getObject() instanceof LiveEntry &amp;&amp; !$scope->getEvent()->getObject()->hasMediaServer() &amp;&amp; $scope->getEvent()->getObject()->isCustomDataModified(null, 'mediaServers')	</code>
                        </field>
                    </item>
                </eventConditions>
                <format>1</format>
                <subject>[Kaltura] - Live Entry stopped broadcasting.</subject>
                <body>Live entry with ID: {entry_id} stopped broadcasting.</body>
                <fromEmail>{from_email}</fromEmail>
                <fromName>{from_name}</fromName>
                <to objectType="KalturaEmailNotificationStaticRecipientProvider">
                    <emailRecipients objectType="array">
                        <item objectType = "KalturaEmailNotificationRecipient">
                            <email objectType="KalturaStringValue">
                                <value>{to_email}</value>
                            </email>
                            <name objectType="KalturaEvalStringField">
                                <code>!is_null(entryPeer::retrieveByPk($scope->getEvent()->getObject()->getEntryId())) ? entryPeer::retrieveByPk($scope->getEvent()->getObject()->getEntryId())->getPartner()->getPartnerName() : ''</code>
                            </name>
                        </item>
                    </emailRecipients>
                </to>
                <contentParameters objectType="array">
                    <item objectType="KalturaEventNotificationParameter">
                        <key>to_email</key>
                        <description>rcpt email</description>
                        <value objectType="KalturaEvalStringField">
                            <code>$scope->getEvent()->getObject()->getPartner()->getAdminEmail()</code>
                        </value>
                    </item>
                    <item objectType="KalturaEventNotificationParameter">
                        <key>from_email</key>
                        <value objectType="KalturaEvalStringField">
                            <code>kConf::get("partner_notification_email")</code>
                        </value>
                    </item>
                    <item objectType="KalturaEventNotificationParameter">
                        <key>from_name</key>
                        <value objectType="KalturaEvalStringField">
                            <code>kConf::get("partner_notification_name")</code>
                        </value>
                    </item>
                    <item objectType="KalturaEventNotificationParameter">
                        <key>entry_id</key>
                        <description>Entry ID</description>
                        <value objectType="KalturaEvalStringField">
                            <code>$scope->getEvent()->getObject()->getId()</code>
                        </value>
                    </item>
                    <item objectType="KalturaEventNotificationParameter">
                        <key>entry_name</key>
                        <description>Entry name</description>
                        <value objectType="KalturaEvalStringField">
                            <code>$scope->getEvent()->getObject()->getName()</code>
                        </value>
                    </item>
                </contentParameters>
            </template>
        </request>
        <request service="eventNotificationTemplate" action="updateStatus" plugin="eventNotification" partnerId="0">
            <id>{1:result:id}</id>
            <status>1</status><!-- EventNotificationTemplateStatus::DISABLED -->
        </request>
    </multirequest>
</xml>