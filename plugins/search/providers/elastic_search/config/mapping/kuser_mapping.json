{
  "settings" : {
	"number_of_shards" : 6,
	"number_of_replicas" : 0,
	"analysis": {
	  "char_filter": {
		"kaltura_whitespace_filter": {
		  "type": "pattern_replace",
		  "pattern": "(\\s+)",
		  "replacement": " "
		}
	  },
	  "tokenizer": {
		"kaltura_ngram_tokenizer": {
		  "type": "ngram",
		  "min_gram": 3,
		  "max_gram": 3,
		  "token_chars": [
			"letter",
			"digit"
		  ]
		}
	  },
	  "analyzer": {
		"kaltura_ngrams": {
		  "type": "custom",
		  "tokenizer": "kaltura_ngram_tokenizer",
		  "filter": [
			"lowercase"
		  ]
		},
		"kaltura_keyword": {
		  "type": "custom",
		  "tokenizer": "keyword",
		  "char_filter": [
			"kaltura_whitespace_filter"
		  ],
		  "filter": [
			"lowercase",
			"trim",
			"asciifolding"
		  ]
		},
		"kaltura_text" : {
		  "tokenizer" : "standard",
		  "filter" : ["standard", "lowercase", "asciifolding"]
		}
	  }
	}
  },
  "mappings" : {
	"kuser" : {
	  "_source" : {
		"enabled" : true
	  },
	  "properties" : {
		"group_ids" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"screen_name" : {
		  "type" : "text",
		  "analyzer" : "kaltura_text",
		  "fields": {
			"ngrams" : {
			  "type" : "text",
			  "analyzer" : "kaltura_ngrams"
			},
			"raw" : {
			  "type" : "text",
			  "analyzer" : "kaltura_keyword"
			}
		  }
		},
		"kuser_type" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"email" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"tags" : {
		  "type" : "text",
		  "analyzer" : "kaltura_text",
		  "fields": {
			"ngrams" : {
			  "type" : "text",
			  "analyzer" : "kaltura_ngrams"
			},
			"raw" : {
			  "type" : "text",
			  "analyzer" : "kaltura_keyword"
			}
		  }
		},
		"status" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"partner_status":{
		  "type" : "keyword"
		},
		"created_at" : {
		  "type" : "date",
		  "format": "epoch_second"
		},
		"updated_at" : {
		  "type" : "date",
		  "format": "epoch_second"
		},
		"first_name" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"last_name" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"role_ids" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"permission_names" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"metadata" :{
		  "type"  : "nested",
		  "properties"  : {
			"metadata_id" : {
			  "type" : "text",
			  "analyzer" : "kaltura_keyword"
			},
			"system_name" : {
			  "type" : "text",
			  "analyzer" : "kaltura_keyword"
			},
			"xpath" : {
			  "type" : "text",
			  "analyzer" : "kaltura_keyword"
			},
			"metadata_profile_id" : {
			  "type" : "text",
			  "analyzer" : "kaltura_keyword"
			},
			"systemname_xpath_metadataprofileid" : {
			  "type" : "text",
			  "analyzer" : "kaltura_keyword"
			},
			"metadata_field_id" : {
			  "type" : "text",
			  "analyzer" : "kaltura_keyword"
			},
			"value_int": {
			  "type": "long"
			},
			"value_text": {
			  "type" : "text",
			  "analyzer" : "kaltura_text",
			  "fields": {
				"ngrams" : {
				  "type" : "text",
				  "analyzer" : "kaltura_ngrams"
				},
				"raw" : {
				  "type" : "text",
				  "analyzer" : "kaltura_keyword"
				}
			  }
			}
		  }
		}
	  }
	}
  }
}
