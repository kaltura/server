			  "fields": {
				"ngrams" : {
				  "type" : "text",
				  "analyzer" : "kaltura_ngrams"
				},
				"raw" : {
				  "type" : "text",
				  "analyzer" : "kaltura_keyword"
				}
			  }
			}
		  }
		}
	  }
	}
  }
}