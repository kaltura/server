{
  "settings" : {
	"number_of_shards" : 5,
	"number_of_replicas" : 0,
	"analysis": {
	  "char_filter": {
		"kaltura_whitespace_filter": {
		  "type": "pattern_replace",
		  "pattern": "(\\s+)",
		  "replacement": " "
		}
	  },
	  "tokenizer": {
		"kaltura_ngram_tokenizer": {
		  "type": "ngram",
		  "min_gram": 3,
		  "max_gram": 3,
		  "token_chars": [
			"letter",
			"digit"
		  ]
		}
	  },
	  "analyzer": {
		"kaltura_ngrams": {
		  "type": "custom",
		  "tokenizer": "kaltura_ngram_tokenizer",
		  "filter": [
			"lowercase"
		  ]
		},
		"kaltura_keyword": {
		  "type": "custom",
		  "tokenizer": "keyword",
		  "char_filter": [
			"kaltura_whitespace_filter"
		  ],
		  "filter": [
			"lowercase",
			"trim"
		  ]
		}
	  }
	}
  },
  "mappings" : {
	"category" : {
	  "_source" : {
		"enabled" : true
	  },
	  "properties" : {
		"partner_id" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"status" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"partner_status" : {
		  "type" : "keyword"
		},
		"privacy" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"privacy_context" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"privacy_contexts" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"kuser_ids" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"parent_id" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"depth" : {
		  "type" : "short"
		},
		"name" : {
		  "type" : "text",
		  "fields": {
			"ngrams" : {
			  "type" : "text",
			  "analyzer" : "kaltura_ngrams"
			},
			"raw" : {
			  "type" : "text",
			  "analyzer" : "kaltura_keyword"
			}
		  }
		},
		"full_name" : {
		  "type" : "text",
		  "fields": {
			"ngrams" : {
			  "type" : "text",
			  "analyzer" : "kaltura_ngrams"
			},
			"raw" : {
			  "type" : "text",
			  "analyzer" : "kaltura_keyword"
			}
		  }
		},
		"full_ids" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
		},
		"entries_count" : {
		  "type" : "integer"
		},
		"created_at" : {
		  "type" : "date"
		},
		"updated_at" : {
		  "type" : "date"
		},
		"direct_entries_count" : {
		  "type" : "integer"
		},
		"direct_sub_categories_count" : {
		  "type" : "integer"
		},
		"members_count" : {
		  "type" : "integer"
		},
		"pending_members_count" : {
		  "type" : "integer"
		},
		"pending_entries_count" : {
		  "type" : "integer"
		},
		"description" : {
		  "type" : "text",
		  "fields": {
			"ngrams" : {
			  "type" : "text",
			  "analyzer" : "kaltura_ngrams"
			},
			"raw" : {
			  "type" : "text",
			  "analyzer" : "kaltura_keyword"
			}
		  }
		},
		"tags" : {
		  "type" : "text",
		  "analyzer" : "kaltura_keyword"
